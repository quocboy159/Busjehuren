@model List<DestinationModel>

<section class="section-locations">
    <div class="container">

        <div class="row">
            <div class="col-md-12">
                <h2 class="title-section-left">
                    100 Verhuurlocaties
                </h2>
                <div class="title-section-details">
                    Busjehuren.nl is met 100 autoverhuurlocaties de grootste autoverhuurder van Nederland. Wij hebben dus altijd een verhuurlocatie bij u in de buurt! Hiernaast vindt u een overzicht van populaire autoverhuurlocaties:
                </div>
                <!-- title-section-details -->
            </div>
            <!-- col -->
        </div>

        <div class="locations-wrapper">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-3 col-sm-3 col-xs-6">
                        <div class="toggle-location-zone">
                            <h3 class="title-section-left call-toggle-location">
                                <span class="visible-xs-inline">
                                    <i class="fa fa-plus" aria-hidden="true"></i>
                                </span>

                                <span>
                                    @item.DisplayName
                                </span>
                            </h3>

                            <div class="toggle-location-block">
                                <ul class="ul-location">

                                    @foreach (var city in item.Cities)
                                    {
                                        <li>
                                            <a href="@Url.Action("Checkout1", "CheckOut", new { urlNameParent = item.UrlName, urlName = city.UrlName })">
                                                <i class="fa fa-map-marker" aria-hidden="true"></i>

                                                <span class="location-title">
                                                    @city.DisplayName
                                                </span>
                                            </a>
                                        </li>
                                    }

                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <!-- locations-wrapper -->

    </div>
    <!-- container -->
</section>