                                    <div class="row">
                                        <div class="col-md-3 col-sm-4 col-xs-12">
                                            @Html.LabelFor(m => m.FactuurBedrijfsnaam)
                                        </div>
                                        <div class="col-md-9 col-sm-8 col-xs-12">
                                            <div class="form-group">
                                                @Html.TextBoxFor(m => m.FactuurBedrijfsnaam, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.FactuurBedrijfsnaam, "", new { @class = "fa fa-times-circle" })
