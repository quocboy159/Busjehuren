                                            @Html.TextBoxFor(m => m.Huisnummer, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Huisnummer, "", new { @class = "fa fa-times-circle" })
                                        </div>
                                    </div>
                                    <!-- col -->
                                </div>
                                <!-- row -->

                                <div class="row">
