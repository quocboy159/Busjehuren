                                    <div class="col-md-3 col-sm-4 col-xs-12">
                                        @Html.LabelFor(m => m.Telefoon)
                                    </div>
                                    <!-- col -->
                                    <div class="col-md-9 col-sm-8 col-xs-12">
                                        <div class="form-group">
                                            @Html.TextBoxFor(m => m.Telefoon, new { @class = "form-control" })
