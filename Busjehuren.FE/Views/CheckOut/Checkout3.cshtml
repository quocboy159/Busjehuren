<!-- page-container -->
@Html.Action("_ReservationCart")
@Html.Partial("_TermsConditions")

@section Scripts{
    <script src="~/Scripts/js/validate-customize.js"></script>
    <script src="~/Scripts/js/Components/Checkout-3-datepicker-nl.js"></script>
    <script src="~/Scripts/js/Components/Checkout-3.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            Checkout3().init({
                btnSubmit: 'btnSubmitCheckout3',
                urlprocess: '@Url.Action("Checkout3", "CheckOut")',
                urlCheckout4: '@Url.Action("Checkout4", "CheckOut")',
                dateValue: '@(Model.Hoofdboeker != null ? Model.Hoofdboeker.BirthDate : "")'
            });
        })
    </script>
}