                                    </div>
                                    <!-- col -->
                                    <div class="col-md-9 col-sm-8 col-xs-12 id-col-depart-date">
                                        <div class="form-group input-group">
                                            <div class="input-group-addon">
                                                <div class="icon icon-calendar"></div>
                                            </div>
                                            @Html.TextBoxFor(m => m.Hoofdboeker.BirthDate, new { @class = "form-control datepicker max-width-221" })
                                            @Html.ValidationMessageFor(m => m.Hoofdboeker.BirthDate, "", new { @class = "fa fa-times-circle" })
                                        </div>

                                    </div>
                                    <!-- col -->
                                </div>
                                <!-- row -->

                                <div class="row">
                                    <div class="col-md-3 col-sm-4 col-xs-12">
                                        @Html.LabelFor(m => m.Email)
                                    </div>
                                    <!-- col -->
                                    <div class="col-md-9 col-sm-8 col-xs-12">
                                        <div class="form-group">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "fa fa-times-circle" })
                                        </div>
                                    </div>
                                    <!-- col -->
                                </div>
                                <!-- row -->

                                <div class="row">
                                    <div class="col-md-3 col-sm-4 col-xs-12">
                                        @Html.LabelFor(m => m.Straat)
                                    </div>
                                    <!-- col -->
                                    <div class="col-md-9 col-sm-8 col-xs-12">
                                        <div class="form-group">
                                            @Html.TextBoxFor(m => m.Straat, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Straat, "", new { @class = "fa fa-times-circle" })
                                        </div>
                                    </div>
                                    <!-- col -->
                                </div>
                                <!-- row -->

                                <div class="row">
                                    <div class="col-md-3 col-sm-4 col-xs-12">
                                        @Html.LabelFor(m => m.Huisnummer)
                                    </div>
                                    <!-- col -->
                                    <div class="col-md-9 col-sm-8 col-xs-12">
