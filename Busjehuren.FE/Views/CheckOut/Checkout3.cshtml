                                                @Html.TextBoxFor(m => m.FactuurTelefoon, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.FactuurTelefoon, "", new { @class = "fa fa-times-circle" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-3 col-sm-4 col-xs-12">
                                            @Html.LabelFor(m => m.FactuurEmail)
                                        </div>
                                        <div class="col-md-9 col-sm-8 col-xs-12">
                                            <div class="form-group">
                                                @Html.TextBoxFor(m => m.FactuurEmail, new { @class = "form-control" })
