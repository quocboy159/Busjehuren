                                        <div class="col-md-9 col-sm-8 col-xs-12">
                                            <div class="form-group">
                                                @Html.TextBoxFor(m => m.FactuurPostcode, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.FactuurPostcode, "", new { @class = "fa fa-times-circle" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-3 col-sm-4 col-xs-12">
                                            @Html.LabelFor(m => m.FactuurStad)
                                        </div>
                                        <div class="col-md-9 col-sm-8 col-xs-12">
                                            <div class="form-group">
                                                @Html.TextBoxFor(m => m.FactuurStad, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.FactuurStad, "", new { @class = "fa fa-times-circle" })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </fieldset>

                        </div>
                    </div>
                </div>

                <div class="col-md-12 col-sm-12 col-xs-12 mb-30">
                    <div class="gray-bar">
                        <div class="form-label label-term">
                            <input type="checkbox" name="checkCondition" id="checkCondition" class="css-checkbox" /><label for="checkCondition" class="css-label">Ik ga akkoord met de </label>
                            <a class="link-modal-specify" id="btnShowTermCondition">algemene voorwaarden</a>
                            <span class="field-validation-valid fa fa-times-circle" data-valmsg-for="checkCondition" data-valmsg-replace="true"><span for="checkCondition" class=""></span></span>
                        </div>
                    </div>
                </div>
                <!-- col -->

                <div class="col-md-6">
                </div>
                <!-- col -->
            </article>
