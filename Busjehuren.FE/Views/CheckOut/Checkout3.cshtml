                                                @Html.TextBoxFor(m => m.FactuurHuisnummer, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.FactuurHuisnummer, "", new { @class = "fa fa-times-circle" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
